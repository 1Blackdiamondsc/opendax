version: '3.6'

services:
  superset:
    image: amancevice/superset:0.18.5
    restart: always
    environment:
      SQLALCHEMY_DATABASE_URI: "mysql://root:changeme@db:3306/superset"
    labels:
      traefik.enable: true
      traefik.frontend.rule: "Host:superset.<%= @config['app']['domain'] %>"
      traefik.port: 8088
